class_name SpriteMetrics
extends Resource
## Class to indicate a front and back sprite offset and scale in battle

@export var back_sprite_offset: Vector2 ## Offset to position the back sprite in battle
@export var back_sprite_scale: Vector2 = Vector2(1.2, 1.2) ## Scale of the back sprite in battle
@export var front_sprite_offset: Vector2 ## Offset to position the front sprite in battle
@export var front_sprite_scale: Vector2 = Vector2(1.2, 1.2) ## Scale of the front sprite in battle
@export var shadow_scale: Vector2 = Vector2(1.2, 1.2) ## Scale of the shadow sprite in battle
@export var shadow_offset: Vector2 ## Offset to position the shadow sprite in battle
